<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->
(ii) 
<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=3 -->
TRA payments prospective only. 
<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=1 -->
