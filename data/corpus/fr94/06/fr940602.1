<!-- PJG ITAG l=80 g=1 f=1 -->
&sect;1918.11 
<!-- PJG /ITAG -->

<!-- PJG ITAG l=89 g=1 f=1 -->
Gear certification.
<!-- PJG 0012 frnewline -->

<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=1 -->
(See also &sect;1918.51). 
<!-- PJG 0012 frnewline -->
