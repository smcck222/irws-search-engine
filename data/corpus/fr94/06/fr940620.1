227.501
<!-- PJG /ITAG -->

<!-- PJG ITAG l=89 g=1 f=1 -->
Definitions.
<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=1 -->
(a) As used in this subpart, unless otherwise specifically indicated, the terms 
<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=3 -->
offeror
<!-- PJG /ITAG -->

<!-- PJG ITAG l=11 g=1 f=1 -->
 and 
<!-- PJG /ITAG -->

