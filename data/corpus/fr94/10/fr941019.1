<!-- PJG /ITAG -->

<!-- PJG ITAG l=28 g=1 f=1 -->
, Nat'l. L. J. (Apr. 18, 1994) at B4. 
<!-- PJG 0012 frnewline -->

<!-- PJG 0012 frnewline -->

<!-- PJG /ITAG -->
</FOOTNOTE>

<FOOTNOTE>
<FOOTNAME>
<!-- PJG ITAG l=28 g=1 f=1 -->

<!-- PJG /ITAG -->

