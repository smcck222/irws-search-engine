<ROWRULE>  </ROWRULE>
<TABLEROW>
<CELLRULE>  </CELLRULE>
<TABLECELL CHJ="L" CVJ="C">
San Diego 
</TABLECELL>
<CELLRULE>  </CELLRULE>
