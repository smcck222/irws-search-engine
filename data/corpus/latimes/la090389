<CELLRULE>  </CELLRULE>
<TABLECELL CHJ="L" CVJ="C">
7. La Loma 
</TABLECELL>
<CELLRULE>  </CELLRULE>
<TABLECELL CHJ="R" CVJ="C">
$320,000 
</TABLECELL>
<CELLRULE>  </CELLRULE>
<TABLECELL CHJ="R" CVJ="C">
0 
</TABLECELL>
