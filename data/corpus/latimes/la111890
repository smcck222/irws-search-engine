<TABLEROW>
<CELLRULE>  </CELLRULE>
<TABLECELL CHJ="C" CVJ="C">
Survey 
</TABLECELL>
<CELLRULE>  </CELLRULE>
<TABLECELL SPN="3" CHJ="C" CVJ="C">
Conventional Mortgages 
</TABLECELL>
<CELLRULE>  </CELLRULE>
